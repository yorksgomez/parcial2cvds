<mapper namespace="edu.eci.pdsw.samples.mybatis.mappers.ProductoMapper">
	
            
    <insert id="insertProduct" parameterType="edu.eci.pdsw.samples.entities.Producto">
        insert into ORD_PRODUCTOS (codigo, nombre,precio) values (#{codigo}, #{nombre},#{preciop})        
    </insert>
    
    <select id="selectProduct" parameterType="map" resultType="edu.eci.pdsw.samples.entities.Producto">
        select codigo, nombre, precio as "preciop" from ORD_PRODUCTOS where codigo=#{idprod} and precio &gt; #{precio}
    </select>    

    <select id="selectAllProducts" resultType="edu.eci.pdsw.samples.entities.Producto">
        select codigo, nombre, precio from ORD_PRODUCTOS
    </select>    
    
    
